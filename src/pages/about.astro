		<!-- Experience Section -->
		<section class="section experience-section">
			<div class="container">
				<div class="experience-content">
					<div class="experience-image">
						<img src="https://images.pexels.com/photos/1427107/pexels-photo-1427107.jpeg" alt="Cargo containers" />
					</div>
					<div class="experience-text">
						<h2 class="section-title">25+ Years of Excellence</h2>
						<div class="stats-grid">
							<div class="stat-item">
								<div class="stat-number">25+</div>
								<div class="stat-label">Years of Experience</div>
							</div>
							
							<div class="stat-item">
