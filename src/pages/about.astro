---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About Us - Super Shine Cargo" description="Learn about Super Shine Cargo's 25+ years of experience in logistics and cargo services in Sri Lanka">
	<Header />
	
  <!-- Hero Section -->
