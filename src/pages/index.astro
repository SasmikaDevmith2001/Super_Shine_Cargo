---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Super Shine Cargo - Your Trusted Logistics Partner in Sri Lanka">
	<Header />
	
	<Hero 
		title="Super Shine Cargo Services"
		subtitle="Your Trusted Logistics Partner in Sri Lanka - For over 25 years, delivering reliable, efficient, and cost-effective cargo solutions across Sri Lanka and beyond."
		ctaText="Get Quote"
		ctaLink="/contact"
		backgroundImage="https://images.pexels.com/photos/753331/pexels-photo-753331.jpeg"
	/>

	<main>
		<!-- About Section -->
		<section class="section about-preview">
			<div class="container">
				<div class="about-content">
					<div class="about-text">
						<h2 class="section-title">25+ Years of Excellence</h2>
						<p class="section-subtitle">
							For over 25 years, Super Shine Cargo has been delivering reliable, efficient, and cost-effective cargo solutions to businesses and individuals across Sri Lanka and beyond. Specializing in shipment clearing, imports, exports, and total logistics solutions.
						</p>
						<p class="about-description">
							We pride ourselves on precision, compliance, and customer satisfaction. With a network of trusted partners and more than 20 loyal clients, we ensure your cargo is handled with the utmost care from port to doorstep.
						</p>
						<a href="/about" class="btn btn-primary">Learn More About Us</a>
					</div>
					<div class="about-image">
						<img src="https://images.pexels.com/photos/4481258/pexels-photo-4481258.jpeg" alt="Cargo operations" />
					</div>
				</div>
			</div>
		</section>

		<!-- Why Choose Us Section -->
		<section class="section why-choose-us">
			<div class="container">
				<h2 class="section-title">Why Choose Super Shine Cargo?</h2>
				<p class="section-subtitle">
					Discover what makes us the preferred logistics partner for businesses across Sri Lanka
				</p>
				
				<div class="features-grid">
					<div class="feature-card">
						<div class="feature-icon">üåü</div>
						<h3>25+ Years of Industry Expertise</h3>
						<p>Decades of experience in cargo handling and logistics solutions</p>
					</div>
					
					<div class="feature-card">
						<div class="feature-icon">‚úî</div>
						<h3>Hassle-Free Customs Clearance</h3>
						<p>Streamlined documentation and compliance processes</p>
					</div>
					
					<div class="feature-card">
						<div class="feature-icon">üí∞</div>
						<h3>Affordable & On-Time</h3>
						<p>Cost-effective solutions without compromising on quality</p>
					</div>
					
					<div class="feature-card">
						<div class="feature-icon">üåê</div>
						<h3>Global & Local Reach</h3>
						<p>Trusted partners worldwide for seamless operations</p>
					</div>
					
					<div class="feature-card">
						<div class="feature-icon">üë•</div>
						<h3>Tailored Service</h3>
						<p>Tailored solutions to meet your specific requirements</p>
					</div>
					
					<div class="feature-card">
						<div class="feature-icon">üîí</div>
						<h3>Safe & Secure Handling</h3>
						<p>Your cargo is protected every step of the way</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Services Section -->
		<section class="section services-preview">
			<div class="container">
				<h2 class="section-title">Our Core Services</h2>
				<p class="section-subtitle">
					From Colombo Port to any corner of the globe ‚Äî we move it all, smoothly and securely
				</p>
				
				<div class="services-grid">
					<div class="service-card">
						<img src="https://images.pexels.com/photos/906494/pexels-photo-906494.jpeg" alt="Import Export" />
						<div class="service-content">
							<h3>Import & Export Cargo Handling</h3>
							<p>Professional handling of all import and export requirements</p>
						</div>
					</div>
					
					<div class="service-card">
						<img src="https://images.pexels.com/photos/1117452/pexels-photo-1117452.jpeg" alt="Customs Clearance" />
						<div class="service-content">
							<h3>Customs Brokerage & Clearance</h3>
							<p>Expert customs documentation and clearance services</p>
						</div>
					</div>
					
					<div class="service-card">
						<img src="https://images.pexels.com/photos/358319/pexels-photo-358319.jpeg" alt="Air Freight" />
						<div class="service-content">
							<h3>Air Freight & Sea Freight Solutions</h3>
							<p>Fast air freight and cost-effective sea freight options</p>
						</div>
					</div>
					
					<div class="service-card">
						<img src="https://images.pexels.com/photos/1427107/pexels-photo-1427107.jpeg" alt="Container Handling" />
						<div class="service-content">
							<h3>Container Handling & Transportation</h3>
							<p>Complete container management and inland transportation</p>
						</div>
					</div>
					
					<div class="service-card">
						<img src="https://images.pexels.com/photos/4481942/pexels-photo-4481942.jpeg" alt="Warehousing" />
						<div class="service-content">
							<h3>Warehousing & Storage</h3>
							<p>Secure storage facilities for short and long-term needs</p>
						</div>
					</div>
					
					<div class="service-card">
						<img src="https://images.pexels.com/photos/1267338/pexels-photo-1267338.jpeg" alt="Project Cargo" />
						<div class="service-content">
							<h3>Project Cargo & Special Shipments</h3>
							<p>Specialized handling for oversized and high-value cargo</p>
						</div>
					</div>
				</div>
				
				<div class="services-cta">
					<a href="/services" class="btn btn-primary">View All Services</a>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="section cta-section">
			<div class="container">
				<div class="cta-content">
					<h2>Ready to Ship Your Cargo?</h2>
					<div class="cta-actions">
						<!--<a href="/contact" class="btn btn-primary">Get Free Quote</a>-->
						<a href="tel:+94xxxxxxxx" class="btn btn-secondary">Call Now: +9411 243 3581</a>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.about-preview {
		background: #f8fafc;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.about-text {
		padding-right: 2rem;
	}

	.about-description {
		font-size: 1rem;
		color: #6b7280;
		margin-bottom: 2rem;
		line-height: 1.7;
	}

	.about-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: 1rem;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.feature-card {
		background: white;
		padding: 2rem;
		border-radius: 1rem;
		text-align: center;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 40px rgba(30, 64, 175, 0.15);
	}

	.feature-icon {
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.feature-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: #1E40AF;
	}

	.feature-card p {
		color: #6b7280;
		line-height: 1.6;
		text-align:center;
	}

	.services-preview {
		background: #f8fafc;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.service-card {
		background: white;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.service-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 40px rgba(30, 64, 175, 0.15);
	}

	.service-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.service-content {
		padding: 1.5rem;
	}

	.service-content h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: #1E40AF;
		text-align: center;
	}

	.service-content p {
		color: #6b7280;
		line-height: 1.6;
		text-align: center;
	}

	.services-cta {
		text-align: center;
		margin-top: 3rem;
	}

	.cta-section {
		background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
		color: white;
		text-align: center;
	}

	.cta-content h2 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.cta-content p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.95;
	}

	.cta-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.section-subtitle{
		text-align:center;
	}

	@media (max-width: 768px) {
		.about-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.about-text {
			padding-right: 0;
		}

		.features-grid,
		.services-grid {
			grid-template-columns: 1fr;
		}

		.cta-content h2 {
			font-size: 2rem;
		}

		.cta-actions {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 380px;
		}

		.btn btn-primary{
			margin-left: 55px;
		}
	}
</style>